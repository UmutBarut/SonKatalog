@using Katalog.ViewModels;
@model UrunViewModel;

<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="container">

        <form asp-controller="Admin" asp-action="Edit" method="POST" enctype="multipart/form-data">

            <input type="hidden" name="UrunID" value="@Model.UrunID">
            <div class="card card-bordered">
                <div class="card-header">
                    <h3 class="card-title">Ürünü Düzenleyin</h3>

                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="col-md-12 mb-10">
                                <div class="col-lg-8">
                                    <!--begin::Image input-->
                                    <div class="image-input image-input-outline" data-kt-image-input="true">
                                        @if(Model.ImagePath == null)
                                        {
                                            <!--begin::Image preview wrapper-->
                                            <div class="image-input-wrapper w-125px h-125px"
                                                style="opacity:0.2 ; background-image: url(/app/images/logos/AkuNOSResize.png)"></div>
                                            <!--end::Image preview wrapper-->   
                                        }
                                        else
                                        {
                                             <!--begin::Image preview wrapper-->
                                            <div class="image-input-wrapper w-125px h-125px"
                                                style="opacity:1 ; background-image: url(/app/images/urunler/@Model.ImagePath)"></div>
                                            <!--end::Image preview wrapper-->  
                                        }
                                    
                                        <!--begin::Edit button-->
                                        <label
                                            class="btn btn-icon btn-circle btn-color-muted btn-active-color-primary w-25px h-25px bg-body shadow"
                                            data-kt-image-input-action="change" data-bs-toggle="tooltip" data-bs-dismiss="click"
                                            title="Change avatar">
                                            <i class="bi bi-pencil-fill fs-7"></i>

                                            <!--begin::Inputs-->
                                            <input type="file" name="file" accept=".png, .jpg, .jpeg" style="object-fit:cover;" />
                                            <input type="hidden" name="avatar_remove" />
                                            <!--end::Inputs-->
                                        </label>
                                        <!--end::Edit button--> 

                                        <!--begin::Cancel button-->
                                        <span
                                            class="btn btn-icon btn-circle btn-color-muted btn-active-color-primary w-25px h-25px bg-body shadow"
                                            data-kt-image-input-action="cancel" data-bs-toggle="tooltip" data-bs-dismiss="click"
                                            title="Cancel avatar">
                                            <i class="bi bi-x fs-2"></i>
                                        </span>
                                        <!--end::Cancel button-->

                                        <!--begin::Remove button-->
                                        <span
                                            class="btn btn-icon btn-circle btn-color-muted btn-active-color-primary w-25px h-25px bg-body shadow"
                                            data-kt-image-input-action="remove" data-bs-toggle="tooltip" data-bs-dismiss="click"
                                            title="Remove avatar">
                                            <i class="bi bi-x fs-2"></i>
                                        </span>
                                        <!--end::Remove button-->
                                    </div>
                                    <!--end::Image input-->
                                </div>
                            </div>
                        </div>
                            
                        

                        <div class="col col-md-6">
                            <div class="mb-10">
                                <label for="UrunNo" class="required form-label">Ürün No</label>
                                <input type="text" class="form-control form-control-sm form-control-solid"
                                    placeholder="Ürün No Giriniz" asp-for="UrunNo" />
                            </div>
                        </div>
                        <div class="col col-md-6">
                            <div class="mb-10">
                                <label for="UrunAdi" class="required form-label">Ürün Adı</label>
                                <input type="text" class="form-control form-control-sm form-control-solid"
                                    placeholder="Ürün Adı Giriniz" asp-for="UrunAdi" />
                            </div>
                        </div>
                        <div class="col col-md-6">
                            <div class="mb-10">
                                <label for="Olculer" class="required form-label">Ölçüler</label>
                                <input type="text" class="form-control form-control-sm form-control-solid"
                                    placeholder="Ürün Ölçüsü Giriniz" asp-for="Olculer" />
                            </div>
                        </div>
                        <div class="col col-md-6">
                            <div class="mb-10">
                                <label for="EANno" class="required form-label">EAN No</label>
                                <input type="text" class="form-control form-control-sm form-control-solid"
                                    placeholder="EAN No Giriniz" asp-for="EANno" />
                            </div>
                        </div>
                        <div class="col col-md-6">
                            <div class="mb-10">
                                <label for="EslestirilenUrunNo" class="form-label">Eşleştirilen Ürün No</label>
                                <input type="text" class="form-control form-control-sm form-control-solid"
                                    placeholder="Ürün No Giriniz" asp-for="EslestirilenUrunNo" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-success" style="float: right;">Kaydet</button>
                </div>
            </div>
        </form>
    </div>
</div>